<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/md_blue_400"
                android:centerColor="@color/md_blue_700"
                android:endColor="@color/md_blue_400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/md_blue_500" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item >
        <shape>
            <gradient
                android:startColor="@color/color_accent"
                android:centerColor="@color/md_blue_700"
                android:endColor="@color/color_accent"
                android:angle="270" />
            <stroke
                android:width="1.5dp"
                android:color="#eeffee" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>