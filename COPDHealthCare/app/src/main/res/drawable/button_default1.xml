<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->

            <!--邊框-->
            <stroke android:width="1dip" android:color="@color/md_blue_600" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="@color/md_blue_600" android:endColor="@color/md_blue_600"  />
        </shape>
    </item>
    <item android:state_enabled="false">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <!--邊框-->
            <stroke android:width="1dip" android:color="@color/md_BlueGrey_700" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="@color/md_Grey_600" android:endColor="@color/md_Grey_600"  />
        </shape>
    </item>
    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/md_blue_900" />
            <gradient android:angle="-90" android:startColor="@color/md_blue_800" android:endColor="@color/md_blue_800"  />
        </shape>
    </item>
</selector>